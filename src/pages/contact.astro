---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="en">
<BaseHead title="Contact" />
<body>
  <div class="wrapper">
    <Header />
    <div class="hero">
      <div class="hero-image"></div>
      <div class="hero-filter"></div>
      <div class="hero-content">
        <h1>Contact</h1>
      </div>
    </div>
    <div class="about-1">
      <div class="about-1-wrapper">
        <div class="about-1-block">
          <h2>Get in Touch</h2>
          <h3>Numbers</h3>
          <p>Lorem ipsum dolor sit amet.</p>
          <p>Lorem ipsum dolor sit amet.</p>
          <h3>Email</h3>
          <p>Lorem ipsum dolor sit amet.</p>
          <p>Lorem ipsum dolor sit amet.</p>
          <h3>Business Hours</h3>
          <p>Lorem ipsum dolor sit amet.</p>
          <p>Lorem ipsum dolor sit amet.</p>
          <p>Lorem ipsum dolor sit amet.</p>
        </div>
        <div class="about-1-block">
          <h2>Send Us a Message</h2>
          <div class="form-wrapper">
            <form action="#">
              <input type="text" placeholder="Name">
              <input type="text" placeholder="Phone Number">
              <input type="text" placeholder="Email">
              <textarea placeholder="Message"></textarea>
              <button type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="map">
      <div class="map-embed">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12987.803463606784!2d120.96799122174801!3d14.582140785398218!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397ca25399d3235%3A0x82d59eb2690c4583!2sJos%C3%A9%20Rizal%20Monument!5e0!3m2!1sen!2sph!4v1692617907576!5m2!1sen!2sph" style="border:0;" allowfullscreen="true" loading="lazy" referrerpolicy="no-referrer-when-downgrade" title="Jose Rizal Monument" aria-label="Jose Rizal Monument"></iframe>
      </div>
    </div>
    <Footer />
  </div>
</body>
</html>

<style lang="stylus">
.wrapper
  position relative
body
  margin 0
  font-family 'Montserrat', sans-serif
  font-size 14px
ul
  margin 0
  padding 0
  list-style-type none
h1
  font-size 50px
  letter-spacing 2.5px
  color white
  font-weight 600
  text-align center
input, textarea
  display block
  width 100%
  max-width 100%
  padding 15px
  border-radius 2px
  border 1px solid #ddd
  background-color #fafafa
  color #666
  height auto
  margin-bottom 20px
  font-weight 400
  font-size 1rem
  line-height 1.5em
button
  border 2px solid #1a6c7a
  color #1a6c7a
  padding 16px 40px
  background-color white
  font-family 'Montserrat', sans-serif
  font-weight 500
  font-size 12px
  text-transform uppercase
  letter-spacing 2px
  cursor pointer
  transition all .3s
  &:hover
    color white
    background-color #153243
.hero
  position relative
.hero-image
  background-image url(/tps/mountain.jpg)
  background-position bottom center
  background-size cover
  background-attachment fixed
  height 40vh
  width auto
.hero-filter
  background-color transparent
  background-image linear-gradient(180deg, #153243 0%, #1a6c7a 100%)
  opacity .6
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  max-width 100vw
  max-height 100vh
  box-sizing border-box
.hero-content
  max-width 100vw
  max-height 100vh
  display flex
  flex-direction column
  align-items center
  justify-content center
  position absolute
  top 50px
  left 0
  width 100%
  height 100%
.about-1
  padding 100px 0 100px 0
.about-1-wrapper
  display flex
  margin-left auto
  margin-right auto
  position relative
  max-width 1140px
.about-1-block
  width 50%
.map
  position relative
.map-embed
  height 41vh
  width auto
.map-embed iframe
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  filter brightness( 100% ) contrast( 100% ) saturate( 0% ) blur( 0px ) hue-rotate( 0deg )
  transition-duration 0.5s
  &:hover
    filter none
</style>