<style lang="stylus">
.wrapper
  position relative
body
  margin 0
  font-family 'Montserrat', sans-serif
  font-size 14px
p
  margin 0
  font-size 16px
ul
  margin 0
  padding 0
  list-style-type none
h1
  font-size 50px
  letter-spacing 2.5px
  color white
  font-weight 600
  text-align center
h2
  font-size 28px
  font-weight 600
  margin 0 0 20px 0
img
  width 100%
  max-width 100%
  height auto
details
  background-color white
  padding 25px
  text-align left
  margin-bottom 3px
  position relative
  p
    font-size 14px
details summary
  transition margin 150ms ease-out
  color #1a6c7a
  font-weight 700
  font-size 16px
  cursor pointer
details[open] summary
  margin-bottom 25px
.hero
  position relative
.hero-image
  background-image url(/tps/mountain.jpg)
  background-position bottom center
  background-size cover
  background-attachment fixed
  height 40vh
  width auto
.hero-filter
  background-color transparent
  background-image linear-gradient(180deg, #153243 0%, #1a6c7a 100%)
  opacity .6
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  max-width 100vw
  max-height 100vh
  box-sizing border-box
.hero-content
  max-width 100vw
  max-height 100vh
  display flex
  flex-direction column
  align-items center
  justify-content center
  position absolute
  top 50px
  left 0
  width 100%
  height 100%
.services
  padding 100px 0 100px 0
.services-item
  padding 100px 0
.services-item:first-child, .services-item:last-child
  padding 0
.services-wrapper
  display flex
  margin-left auto
  margin-right auto
  position relative
  max-width 1140px
.services-block
  width 50%
  display flex
  position relative
.faq
  padding 100px
  background-color #f3f9fb
.faq-subtext
  margin-bottom 40px
.faq-content
  text-align center
  width 45rem
  margin auto
.contact-btn
  margin-top 50px
.contact-btn a
  padding 16px 40px
  text-transform uppercase
  letter-spacing 2px
  font-weight 500
  border 2px solid #1a6c7a
  text-decoration none
  color #1a6c7a
  transition all .3s
  &:hover
    color white
    background-color #153243
.services-content
  padding-right 50px
  display flex
  flex-wrap wrap
  align-content center
.services-content-right
  padding-left 50px
  display flex
  flex-wrap wrap
  align-content center
</style>